{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-8 text-center">
            <h3 class="p-4 text-center">Deny request</h3>

            <p>This request will be denied and the user will be notified about this decision.</p>

            <p>
                If you wish, you could write a brief explanation to the user on why the request got denied.
            </p>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.reason, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            </div>
            {{ form_widget(form.deny, {'attr': {'class': 'btn btn-block btn-outline-dark'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}